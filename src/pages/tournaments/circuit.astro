---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Circuit Racing - Fujiwara Tofu Shop',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Hero
    image={{ src: '~/assets/images/gt3.png', alt: 'Circuit Racing Hero' }}
  >
    <div slot="subtitle" style="margin-top: 5vh; margin-bottom: 5vh; font-size: 3.75rem; font-weight: 700;font-family: var(--aw-font-sans);">
      Circuit Racing
    </div>

    <div slot="subtitle" style="margin-top: 10vh; margin-bottom: 5vh; font-size: 1.25rem; line-height: 1.75rem; font-family: var(--aw-font-sans);">
      FTS goes full throttle on every straight
    </div>
  </Hero>

  <Note />

  <Features
    id="features"
    tagline="Key Advantages"
    title="Push Limits on the Circuit"
    subtitle="FTS brings competitive spirit, technical mastery, and motorsport passion to every lap."
    items={[
      {
        title: 'F1-Level Precision',
        description: 'Execute perfect laps with telemetry-like consistency, maximizing every apex and braking zone.',
        icon: 'tabler:flag',
      },
      {
        title: 'GT-Class Versatility',
        description: 'Race in GT3, GT4, or LMP cars — each class offers a unique challenge and excitement.',
        icon: 'tabler:car-suv',
      },
      {
        title: 'Track Day Ready',
        description: 'Join practice sessions and events that simulate real-world racing weekends.',
        icon: 'tabler:calendar-event',
      },
      {
        title: 'Performance Optimization',
        description: 'Get the best out of your setup. Learn tire management, fuel strategy, and more.',
        icon: 'tabler:gauge',
      },
      {
        title: 'Multiclass Events',
        description: 'Share the track with multiple classes and experience the true essence of endurance racing.',
        icon: 'tabler:layers-intersect',
      },
      {
        title: 'Global Competitions',
        description: 'Compete with racers from around the world on legendary circuits.',
        icon: 'tabler:world',
      },
    ]}
  />

  <Content
    isReversed
    tagline="Circuit Culture"
    title="Discipline, Focus, Glory"
    items={[
      {
        title: 'Race with Purpose',
        description: 'Every lap is a step toward mastery. Each tenth of a second counts.',
      },
      {
        title: 'Track Tested',
        description: 'Our drivers embrace challenges of every circuit — from Monza to Suzuka.',
      },
      {
        title: 'All Classes Welcome',
        description: 'F1, GT, LMP, touring, and more — find your favorite and take the grid.',
      },
    ]}
    image={{
      src: '~/assets/images/dtm.png',
      alt: 'Circuit Racing Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">One Track, Many Stories</h3>
      FTS welcomes every class, every racer, and every ambition — if it's on a circuit, it's on.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-slate-100 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Steps
    title="How to Join Circuit Races?"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Join Discord</span>',
        description: 'The Discord is your entry to schedules, practice servers, and live races.',
        icon: 'tabler:brand-discord',
      },
      {
        title: 'Step 2: <span class="font-medium">Select Your Class</span>',
        description: 'Choose between F1, GT3, LMP2, and others in dedicated signup channels.',
        icon: 'tabler:select',
      },
      {
        title: 'Step 3: <span class="font-medium">Join a Server</span>',
        description: 'Practice or qualify — all servers are listed and easy to access.',
        icon: 'tabler:server',
      },
      {
        title: 'Race Day',
        description: 'Log in and put your skills to the test in official timed events.',
        icon: 'tabler:steering-wheel',
      },
    ]}
    image={{
      src: '~/assets/images/f1.png',
      alt: 'Steps image',
    }}
  />

  <FAQs
    title="FAQs - Circuit Division"
    subtitle="All you need to know to start circuit racing with FTS"
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'What cars can I race in FTS circuit events?',
        description: 'We support a variety of classes: Formula cars, GT3/GT4, LMP1/2, and more.',
      },
      {
        title: 'Are there prizes?',
        description: 'Many races include cash pools or partner-sponsored gear. Top drivers get featured.',
      },
      {
        title: 'Do I need a specific mod pack?',
        description: 'Yes. Join Discord to get the latest mod pack and ensure compatibility.',
      },
      {
        title: 'What if I’m new to sim racing?',
        description: 'FTS has a friendly community that helps beginners. We offer practice sessions and setup tips.',
      },
      {
        title: 'Which simulator is used?',
        description: 'All events are run on Assetto Corsa (CSP recommended).',
      },
      {
        title: 'Can I race multiclass events?',
        description: 'Absolutely. We run multiclass endurance and sprint events regularly.',
      },
    ]}
  />

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Join FTS Circuit League',
        href: 'https://discord.gg/uY7NxaCKxb',
        target: '_blank',
        icon: 'tabler:brand-discord',
      },
    ]}
  >
    <Fragment slot="title">
      Time to hit the track
    </Fragment>

    <Fragment slot="subtitle">
      Join FTS today and start your path to the podium
    </Fragment>
  </CallToAction>

  <div class="flex justify-center py-8">
    <iframe
      src="https://discord.com/widget?id=1132332567459278878&theme=dark"
      width="800"
      height="400"
      style="margin-top: -5vh; padding: 2vh;"
      allowtransparency="true"
      frameborder="0"
      class="rounded-lg"
    ></iframe>
  </div>
</Layout>