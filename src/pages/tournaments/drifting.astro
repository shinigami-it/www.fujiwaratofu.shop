---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Drifting - Fujiwara Tofu Shop',
  ignoreTitleTemplate: true,
};

---
<Layout metadata={metadata}>
  <Hero
    image={{ src: '~/assets/images/ae86_7.png', alt: 'Drifting Hero' }}
  >
    <div slot="subtitle" style="margin-top: 5vh; margin-bottom: 5vh; font-size: 3.75rem; font-weight: 700;font-family: var(--aw-font-sans);">
      Drifting
    </div>

    <div slot="subtitle" style="margin-top: 10vh; margin-bottom: 5vh; font-size: 1.25rem; line-height: 1.75rem; font-family: var(--aw-font-sans);">
      Perfect Your Drift, Wherever You Race
    </div>
  </Hero>

  <Note />

  <Features
    id="features"
    tagline="Key Advantages"
    title="Master the Art of Drifting"
    subtitle="Whether on touge roads or at competitive events, FTS brings the thrill of drifting to a global stage."
    items={[
      {
        title: 'Perfect Your Drift',
        description: 'Control every corner, whether on a winding mountain pass, a fast street circuit, or a professional track.',
        icon: 'tabler:car',
      },
      {
        title: 'JDM Culture',
        description: 'Live the JDM lifestyle, from iconic cars like the AE86 to the Skyline—an unforgettable experience on any road.',
        icon: 'tabler:manual-gearbox',
      },
      {
        title: 'Versatile Drifting Techniques',
        description: 'Master every type of drift: from clutch-kicks to e-brake initiations, and maintain control at high speeds.',
        icon: 'tabler:mountain',
      },
      {
        title: 'Iconic Tracks & Roads',
        description: 'Compete on famous tracks like Fuji Speedway, D1GP circuits, and touge roads like Akina, blending tradition with modern drifting culture.',
        icon: 'tabler:road',
      },
      {
        title: 'Competitive Drifting',
        description: 'Challenge opponents in timed events, tandem battles, and tournaments to prove who’s the best across all drifting disciplines.',
        icon: 'tabler:flag',
      },
      {
        title: 'Global Drift Community',
        description: 'Join a worldwide network of drifting enthusiasts, from casual drifters to professional competitors.',
        icon: 'tabler:world',
      },
    ]}
  />

  <Content
    isReversed
    tagline="Drift Beyond Limits"
    title="Precision, Control, and Versatility"
    items={[
      {
        title: 'Master Diverse Drifting Styles',
        description: 'From street racing to competitive drifting on tracks and mountain roads, FTS is about versatility and skill.',
      },
      {
        title: 'Drive Legendary JDM Machines',
        description: 'Feel the power of JDM cars like the AE86, RX-7, and more as you tackle different drifting challenges across the globe.',
      },
      {
        title: 'Elevate Your Drift Game',
        description: 'It’s not just about speed—it’s about control, precision, and executing flawless drift maneuvers, no matter the track.',
      },
    ]}
    image={{
      src: '~/assets/images/ae86_6.png',
      alt: 'Drifting Event Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Your Drift, Your Way</h3>
      FTS combines the thrill of street, touge, and track drifting for an unparalleled experience.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-slate-100 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Steps
    title="How to Join Drifting Events?"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Join Discord</span>',
        description: 'Get access to the latest drifting events, practice sessions, and community chats on our Discord server.',
        icon: 'tabler:brand-discord',
      },
      {
        title: 'Step 2: <span class="font-medium">Pick Your Car</span>',
        description: 'Choose from a variety of JDM cars, each designed to handle different types of drifting, from touge to circuit.',
        icon: 'tabler:manual-gearbox',
      },
      {
        title: 'Step 3: <span class="font-medium">Join a Session</span>',
        description: 'Pick a drift event, whether it’s on the street or at the track, and show off your skills.',
        icon: 'tabler:server',
      },
      {
        title: 'Step 4: Drift Your Heart Out',
        description: 'Race, practice, and compete in events designed to test every facet of your drifting abilities.',
        icon: 'tabler:steering-wheel',
      },
    ]}
    image={{
      src: '~/assets/images/ae86_5.png',
      alt: 'Event Steps Image',
    }}
  />

  <FAQs
    title="FAQs - Drifting Division"
    subtitle="Everything you need to know about drifting"
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'What cars can I drift in FTS?',
        description: 'We support various JDM models: AE86, RX-7, Skyline, and more. Each car has its own unique drifting feel.',
      },
      {
        title: 'Are there any prizes for top drifters?',
        description: 'Yes! Win custom gear, sponsorships, and more by ranking high in events and tournaments.',
      },
      {
        title: 'Do I need special mods?',
        description: 'Yes, check our Discord for the latest mods and car packs to stay competitive and enhance your drift experience.',
      },
      {
        title: 'I’m new to drifting—what should I do?',
        description: 'No problem! Our community is welcoming, and we have plenty of resources to help you get started. Practice makes perfect.',
      },
      {
        title: 'Which simulator is used for drifting events?',
        description: 'We run all events on Assetto Corsa, featuring specific mods for maximum realism and immersive drifting.',
      },
      {
        title: 'Can I compete with friends?',
        description: 'Of course! Whether it’s a private session or a public competition, you can always bring your friends along.',
      },
    ]}
  />

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Join FTS Drifting League',
        href: 'https://discord.gg/uY7NxaCKxb',
        target: '_blank',
        icon: 'tabler:brand-discord',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to Drift?
    </Fragment>

    <Fragment slot="subtitle">
      Join FTS today and become a part of the global drifting community. It’s time to drift anywhere, anytime.
    </Fragment>
  </CallToAction>

  <div class="flex justify-center py-8">
    <iframe
      src="https://discord.com/widget?id=1132332567459278878&theme=dark"
      width="800"
      height="400"
      style="margin-top: -5vh; padding: 2vh;"
      allowtransparency="true"
      frameborder="0"
      class="rounded-lg"
    ></iframe>
  </div>
</Layout>